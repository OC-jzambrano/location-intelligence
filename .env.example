# =============================================================================
# FastAPI REST API Starter - Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment.
# NEVER commit your .env file to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Application name displayed in docs and logs
APP_NAME="FastAPI REST API Starter"

# Application environment: development, staging, production
APP_ENV=development

# Enable debug mode (disable in production)
DEBUG=true

# API version prefix
API_V1_PREFIX=/api/v1

# Allowed origins for CORS (comma-separated)
# Example: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------

# Host to bind the server to
HOST=0.0.0.0

# Port to run the server on
PORT=8000

# Number of worker processes (production only)
WORKERS=1

# -----------------------------------------------------------------------------
# Database Settings (PostgreSQL)
# -----------------------------------------------------------------------------

# PostgreSQL connection URL
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/fastapi_starter

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Echo SQL queries to console (disable in production)
DB_ECHO=false

# -----------------------------------------------------------------------------
# Redis Settings (Caching & Rate Limiting)
# -----------------------------------------------------------------------------

# Redis connection URL
# Format: redis://[:password]@host:port/db
REDIS_URL=redis://localhost:6379/0

# Cache TTL in seconds (default: 5 minutes)
CACHE_TTL=300

# -----------------------------------------------------------------------------
# JWT Authentication Settings
# -----------------------------------------------------------------------------

# Secret key for signing JWT tokens
# IMPORTANT: Generate a secure random string for production
# Example: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# Algorithm for JWT encoding
JWT_ALGORITHM=HS256

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration time in days
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Rate Limiting Settings
# -----------------------------------------------------------------------------

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Default rate limit: requests per minute
RATE_LIMIT_PER_MINUTE=60

# Rate limit for authentication endpoints (more restrictive)
AUTH_RATE_LIMIT_PER_MINUTE=10

# -----------------------------------------------------------------------------
# Password Hashing Settings
# -----------------------------------------------------------------------------

# Bcrypt hashing rounds (12-14 recommended for production)
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Logging Settings
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=text

# Maps and Geocoding API Settings
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE

